{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/dashboard": ["./algostack-app/"],
      "@/dashboard/*": ["./algostack-app/*"],
      "@/siwa": ["./use-siwa"],
      "@/siwa/*": ["./use-siwa/*"],
      "@/avm": ["./use-avm"],
      "@/avm/*": ["./use-avm/*"],
      "@avmkit/pipeline": ["../../packages/pipeline/src/index"],
      "@avmkit/siwa": ["../../packages/siwa/src/index"],
      "@avmkit/xwallet": ["../../packages/xwallet/src/index"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
